<UserControl x:Class="MagicCucaBakeryApp.Views.MenuItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MagicCucaBakeryApp.Views"             
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="65" PreviewMouseUp="UserControl_PreviewMouseUp">
    <Grid Style="{StaticResource stlClickableGrid}">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="4"/>
        </Grid.RowDefinitions>
        <Label Name="Label" Style="{StaticResource stlLabelBase}" Content="{Binding Text, Mode=OneWay}" Padding="0" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" />
        <Border x:Name="SelectBar" Visibility="Hidden" BorderBrush="{StaticResource DetailColor}" Background="{StaticResource DetailColor}" BorderThickness="0.3" Margin="1" CornerRadius="2" Grid.Row="1" />
    </Grid>
</UserControl>
